{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "schema.json",
  "type": "object",
  "@xsdNamespaces": {
    "xsd": "http://www.w3.org/2001/XMLSchema",
    "xsi": "http://www.w3.org/2001/XMLSchema-instance"
  },
  "@xsdSchemaAttributes": {
    "AttributeFormDefault": "Unqualified",
    "ElementFormDefault": "Qualified",
    "BlockDefault": "None",
    "FinalDefault": "None"
  },
  "properties": {
    "Root": {
      "$ref": "#/definitions/customer"
    }
  },
  "definitions": {
    "customer": {
      "allOf": [
        {
          "$ref": "#/definitions/contact"
        },
        {
          "allOf": [
            {
              "oneOf": [
                {
                  "properties": {
                    "address_norwegian": {
                      "$ref": "#/definitions/address_norwegian"
                    }
                  },
                  "required": [
                    "address_norwegian"
                  ]
                },
                {
                  "properties": {
                    "address_swedish": {
                      "$ref": "#/definitions/address_swedish"
                    }
                  },
                  "required": [
                    "address_swedish"
                  ]
                }
              ]
            },
            {
              "properties": {
                "email": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "minItems": 1
                  },
                  "@xsdType": "string"
                },
                "contacts": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/contact",
                    "maxItems": 10
                  }
                }
              },
              "required": [
                "email"
              ]
            }
          ]
        },
        {
          "$ref": "#/definitions/priorityAndTags",
          "@xsdType": "#ref"
        }
      ]
    },
    "priorityAndTags": {
      "properties": {
        "priority": {
          "$ref": "#/definitions/priority"
        },
        "tags": {
          "$ref": "#/definitions/tags"
        }
      }
    },
    "contact": {
      "$ref": "#/definitions/name",
      "@xsdType": "#ref"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "@xsdType": "string"
      }
    },
    "priority": {
      "allOf": [
        {
          "type": "string",
          "@xsdType": "string"
        },
        {
          "enum": [
            "Low",
            "Medium",
            "High"
          ]
        }
      ]
    },
    "name": {
      "properties": {
        "title": {
          "$ref": "#/definitions/title"
        },
        "firstName": {
          "type": "string",
          "@xsdType": "string"
        },
        "lastName": {
          "type": "string",
          "@xsdType": "string"
        }
      },
      "required": [
        "title",
        "firstName",
        "lastName"
      ]
    },
    "title": {
      "allOf": [
        {
          "type": "string",
          "@xsdType": "string"
        },
        {
          "enum": [
            "mr",
            "ms",
            "miss"
          ]
        }
      ]
    },
    "address": {
      "properties": {
        "street": {
          "type": "string",
          "@xsdType": "string"
        },
        "co": {
          "type": "string",
          "@xsdType": "string"
        },
        "zipCode": {
          "type": "string",
          "@xsdType": "string"
        },
        "city": {
          "type": "string",
          "@xsdType": "string"
        },
        "country": {
          "type": "string",
          "@xsdType": "string"
        }
      },
      "required": [
        "street",
        "zipCode",
        "city",
        "country"
      ]
    },
    "address_norwegian": {
      "allOf": [
        {
          "$ref": "#/definitions/address"
        },
        {
          "properties": {
            "street": {
              "type": "string",
              "@xsdType": "string"
            },
            "co": {
              "type": "string",
              "@xsdType": "string"
            },
            "zipCode": {
              "allOf": [
                {
                  "type": "string",
                  "@xsdType": "string"
                },
                {
                  "pattern": "^\\d{4}$"
                }
              ]
            },
            "city": {
              "type": "string",
              "@xsdType": "string"
            },
            "country": {
              "type": "string",
              "@xsdType": "string"
            }
          },
          "required": [
            "street",
            "zipCode",
            "city",
            "country"
          ]
        }
      ]
    },
    "address_swedish": {
      "allOf": [
        {
          "$ref": "#/definitions/address"
        },
        {
          "properties": {
            "street": {
              "type": "string",
              "@xsdType": "string"
            },
            "co": {
              "type": "string",
              "@xsdType": "string"
            },
            "zipCode": {
              "allOf": [
                {
                  "type": "string",
                  "@xsdType": "string"
                },
                {
                  "pattern": "^\\d{3} \\d{2}$"
                }
              ]
            },
            "city": {
              "type": "string",
              "@xsdType": "string"
            },
            "country": {
              "type": "string",
              "@xsdType": "string"
            }
          },
          "required": [
            "street",
            "zipCode",
            "city",
            "country"
          ]
        }
      ]
    }
  }
}